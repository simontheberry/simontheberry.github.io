# ============================================================================
# Environment Configuration
# Copy to .env and fill in values
# ============================================================================

NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/complaint_triage

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=8h

# AI Provider (openai | anthropic | azure_openai)
AI_PROVIDER=openai
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=
AI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-ada-002

# ABR API (Australian Business Register)
# Register at https://abr.business.gov.au/Tools/WebServices
ABR_API_GUID=

# Email (SMTP for outbound)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Email (IMAP for inbound ingestion)
IMAP_HOST=
IMAP_PORT=993
IMAP_USER=
IMAP_PASS=

# Client URL
CLIENT_URL=http://localhost:3000

# Storage
STORAGE_PROVIDER=local

# Systemic Detection
SIMILARITY_THRESHOLD=0.85
CLUSTER_MIN_COMPLAINTS=3
SPIKE_DETECTION_WINDOW_HOURS=24
SPIKE_DETECTION_THRESHOLD=5
